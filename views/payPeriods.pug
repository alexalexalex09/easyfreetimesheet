extends layout

block scripts 
  script(type="text/javascript" src="/javascripts/payPeriods.js")

block content
  #payPeriodsContainer.mainContainer
    #payPeriodsTitle.pageTitle Pay Periods
    #payPeriodsOrg.pageTitle
    button#addPeriods(onclick="showModal('addPeriodsModal')") Add Pay Periods
    button#adjustSchedule(onclick="window.location.href='./payPeriods/adjust'") Adjust Schedule 
    button#changeDueDate(onclick="showModal('changeDueDateModal')") Change Due Dates 
    #payPeriodsListContainer
  #calendarShadow.hidden(onclick="closeModals()")
  #addPeriodsModal.inputModal.hidden
    label(for="periodsToAdd") Number of periods to add:
    input#periodsToAdd(type="number")
    button.cancel(onclick="closeModals()") Cancel
    button#submitPeriodsToAdd(onclick="submitPeriodsToAdd()") Submit
  #changeDueDateModal.inputModal.hidden 
    label(for="daysAfter") How many days after the periods ends are timesheets due? Enter 0 for timesheets that are due on the last day of a pay period 
    input#daysAfter(type="number")
    button.cancel(onclick="closeModals()") Cancel
    button#submitDueDate(onclick="submitDueDate()") Submit
  #footer
    i#menuButton.fa-solid.fa-bars(onclick="toggleMenu()")
    i#OrgButton.fa-solid.fa-building(onclick="goToOrg()")
    i#homeButton.fa-solid.fa-house(onclick="window.location='/'")
  include menu