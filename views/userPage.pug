extends layout

block scripts 
  script(type="text/javascript" src="/javascripts/userPage.js")

block content
  #userContainer.mainContainer
    #userName
      #userTitle.pageTitle User Name
      i.fa-solid.fa-pen-to-square(onclick="editName()")
    #hoursUsedTitle.userPageTitle Hours
      i.fa-solid.fa-pen-to-square(onclick="editHours()")
    #hoursUsed
    #userToApproveTitle.userPageTitle User Unapproved Periods
    #userToApprove
    #userApprovedTitle.userPageTitle Periods Already Approved
    #userApproved
  #calendarShadow.hidden(onclick="closeModals()")
  #footer
    i#menuButton.fa-solid.fa-bars(onclick="toggleMenu()")
    i#OrgButton.fa-solid.fa-building(onclick="goToOrg()")
    i#homeButton.fa-solid.fa-house(onclick="window.location='/'")
  include menu