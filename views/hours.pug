extends layout

block scripts 
  script(type="text/javascript" src="/javascripts/hours.js")

block content
  #periodsContainer.mainContainer
    #periodsTitle.pageTitle Pay Periods: 
    #periodsTypeContainer 
      label#changePeriodTypeLabel(for="changePeriodType") Viewing: 
      select#changePeriodType.selector(onchange="changeDisplayPeriods()")
        option(value="unapproved") Unapproved Pay Periods
        option(value="revokable") Revokable Pay Periods
        option(value="approved") Approved Pay Periods
    #periodsSelector.hidden
      label#periodsOrgLabel(for="periodsOrg") Organization: 
      select#periodsOrg.selector
    #periods
    #calendarShadow.hidden(onclick="closeModals()")
  #footer
    i#menuButton.fa-solid.fa-bars(onclick="toggleMenu()")
    i#homeButton.fa-solid.fa-house(onclick="window.location='/'")
    if user 
      i#calendarViewButton.fa-solid.fa-calendar(onclick="window.location='/calendar'")
  include menu